---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../site.config';

interface Props {
  title?: string;
  description?: string;
  activePage?: 'articles' | 'explore';
}

const {
  title = siteConfig.title,
  description = siteConfig.description,
  activePage = 'articles',
} = Astro.props;

const pageTitle = title === siteConfig.title ? title : `${title} â€” ${siteConfig.title}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={description} />
  <link rel="alternate" type="application/rss+xml" title={siteConfig.title} href="/rss.xml" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Mono:wght@400;500&family=Newsreader:ital,opsz,wght@0,6..72,400;0,6..72,500;1,6..72,400&display=swap" rel="stylesheet" />
</head>
<body>
  <div class="grain">
    <div class="container">
      <Header activePage={activePage} />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </div>
</body>
</html>
