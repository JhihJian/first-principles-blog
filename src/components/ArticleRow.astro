---
interface Props {
  year: string;
  date: string;
  title: string;
  excerpt: string;
  tag: string;
  slug: string;
  index: number;
}

const { year, date, title, excerpt, tag, slug, index } = Astro.props;
---

<a class="article-row" href={`/posts/${slug}`} style={`animation-delay: ${index * 0.05}s;`}>
  <div class="article-year">{year}</div>
  <div class="article-content">
    <div class="article-date">{date}</div>
    <h3 class="article-title">{title}</h3>
    <p class="article-excerpt">{excerpt}</p>
  </div>
  <span class="article-tag">{tag}</span>
</a>

<style>
  .article-row {
    display: grid;
    grid-template-columns: 70px 1fr;
    gap: 0;
    cursor: pointer;
    transition: background 0.3s ease;
    border-bottom: 1px solid var(--border);
    opacity: 0;
    animation: fadeSlideIn 0.5s ease forwards;
    position: relative;
    text-decoration: none;
    color: inherit;
  }

  .article-row:hover { background: rgba(139, 105, 20, 0.02); }

  .article-year {
    font-family: 'DM Mono', monospace;
    font-size: 12px;
    color: var(--muted);
    padding: 28px 0;
    letter-spacing: 0.02em;
  }

  .article-content {
    padding: 24px 0 24px 16px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .article-date {
    font-family: 'DM Mono', monospace;
    font-size: 9px;
    color: var(--muted-light);
    margin-bottom: 4px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .article-title {
    font-family: 'Newsreader', serif;
    font-size: 24px;
    font-weight: 400;
    color: var(--fg);
    line-height: 1.3;
    margin: 0 0 6px 0;
    transition: color 0.25s ease;
    letter-spacing: -0.02em;
  }

  .article-row:hover .article-title { color: var(--accent); }

  .article-excerpt {
    font-family: 'Newsreader', serif;
    font-size: 17px;
    color: var(--muted);
    line-height: 1.75;
    margin: 0;
    max-width: 540px;
    font-variation-settings: 'opsz' 17;
  }

  .article-tag {
    font-family: 'DM Mono', monospace;
    font-size: 9px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--accent);
    background: rgba(139, 105, 20, 0.06);
    padding: 3px 8px;
    white-space: nowrap;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .article-row:hover .article-tag { opacity: 1; }

  @media (max-width: 768px) {
    .article-row {
      grid-template-columns: 1fr;
      gap: 8px;
      padding: 20px 0;
    }
    .article-year { display: none; }
    .article-content { padding: 0; }
    .article-title { font-size: 20px; }
    .article-excerpt { font-size: 16px; }
    .article-tag {
      position: relative;
      top: 0;
      transform: none;
      opacity: 1;
      display: inline-block;
      margin-top: 8px;
    }
  }
</style>
